{
  "name": "polydock",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "bin": {
    "polydock": "bin/polydock.sh"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "dist",
    "bin",
    "*.md",
    "config"
  ],
  "husky": {
    "hooks": {
      "prepare-commit-msg": "npx --no-install devmoji -e --lint"
    }
  },
  "scripts": {
    "prebuild": "pnpm run lint",
    "build:app": "npx rollup -c rollup.config.js",
    "build": "npm run build:app",
    "lint:ts": "npx tsc --noEmit",
    "lint:eslint": "npx eslint src/*.ts --cache",
    "lint": "npm run lint:eslint && npm run lint:ts",
    "clean": "npx rimraf lib coverage *.log build 0x dist",
    "run": "gjs -I dist dist/index.js",
    "debug": "GTK_DEBUG=interactive gjs -I dist dist/index.js"
  },
  "ultra": {
    "concurrent": [
      "lint",
      "prebuild",
      "ultra"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-sucrase": "^3.0.2",
    "@types/eslint": "^6.8.1",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/node": "^14.0.8",
    "@types/prettier": "^2.0.1",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "@zeit/ncc": "^0.22.3",
    "devmoji": "^2.1.9",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "20.1.0",
    "husky": "4.2.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.12.0",
    "rollup-plugin-terser": "^6.1.0",
    "typescript": "^3.9.3",
    "typesync": "^0.7.0"
  }
}
